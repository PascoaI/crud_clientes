@model ClienteCRUD.Models.Cliente
@{
    ViewBag.Title = "Registrar cliente";
}
<div class="container mt-4">
 <h2>Adicionar Novo Cliente</h2>

    <form asp-action="Create">
        <div class="form-group">
            <label for="CLI_NOME">Nome</label>
            <input asp-for="CLI_NOME" class="form-control col-md-6" />
            <span asp-validation-for="CLI_NOME" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="CLI_DATANASCIMENTO">Data de Nascimento</label>
            <input asp-for="CLI_DATANASCIMENTO" class="form-control col-md-6" type="date" />
            <span asp-validation-for="CLI_DATANASCIMENTO" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="CLI_ATIVO" class="form-check-input" type="checkbox" checked />
            <label for="CLI_ATIVO">Ativo</label>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Salvar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancelar
        </a>
    </form>
</div>
