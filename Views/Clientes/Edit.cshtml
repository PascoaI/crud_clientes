@model ClienteCRUD.Models.Cliente
@{
    ViewBag.Title = "Editar registro";
}
<div class="container mt-4">
    <h2>Editar Cliente</h2>

    <form asp-action="Edit" class="mt-3">
        <input type="hidden" asp-for="CLI_ID" />
        
        <div class="form-group">
            <label for="CLI_NOME">Nome</label>
            <input asp-for="CLI_NOME" class="form-control col-md-6" />
            <span asp-validation-for="CLI_NOME" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label for="CLI_DATANASCIMENTO">Data de Nascimento</label>
            <input asp-for="CLI_DATANASCIMENTO" class="form-control col-md-6" type="date" />
            <span asp-validation-for="CLI_DATANASCIMENTO" class="text-danger"></span>
        </div>
        
        <div class="form-group form-check">
            <input asp-for="CLI_ATIVO" class="form-check-input" type="checkbox" />
            <label asp-for="CLI_ATIVO" class="form-check-label">Ativo</label>
        </div>
        
        <div class="mb-3"></div>
        
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Salvar Alterações
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancelar
        </a>
    </form>
</div>
