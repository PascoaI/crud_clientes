@model ClienteCRUD.Models.Cliente
@{
    ViewBag.Title = "Detalhes do cliente";
}
<div class="container mt-4">
    <h2>Detalhes do Cliente</h2>

    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Nome</dt>
                <dd class="col-sm-10">@Model.CLI_NOME</dd>

                <dt class="col-sm-2">Data de Nascimento</dt>
                <dd class="col-sm-10">@Model.CLI_DATANASCIMENTO.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-2">Ativo</dt>
                <dd class="col-sm-10">@((Model.CLI_ATIVO) ? "Sim" : "Não")</dd>
            </dl>
        </div>
    </div>
    <div class="mb-3"></div>
    <a asp-action="Edit" asp-route-id="@Model.CLI_ID" class="btn btn-primary">
        <i class="fas fa-edit"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>
